<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_10"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <TextView
            style="@style/styleTextView_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Select your Language"
            android:textColor="#0000FF"
            android:textSize="@dimen/textSize55" />

        <TextView
            style="@style/styleTextView_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_20"
            android:text="Por favor seleccione su idioma"
            android:textColor="#0000FF"
            android:textSize="@dimen/textSize45" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_10"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_espanol"
                android:layout_width="@dimen/layout_400"
                android:layout_height="@dimen/layout_90"
                android:background="@drawable/bt_espanol"
                android:clickable="true"
                android:onClick="onClick"
                android:text="Espanol"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_english"
                android:layout_width="@dimen/layout_400"
                android:layout_height="@dimen/layout_90"
                android:layout_marginLeft="@dimen/layout_20"
                android:background="@drawable/bg_skeebar"
                android:clickable="true"
                android:onClick="onClick"
                android:text="English"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>