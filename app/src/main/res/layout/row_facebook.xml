<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_400"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_row_news"
            android:layout_width="@dimen/layout_250"
            android:layout_height="@dimen/layout_350"
            android:layout_margin="@dimen/layout_20"
            android:scaleType="fitXY"
            android:src="@drawable/image_null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/layout_20"
            android:layout_marginTop="@dimen/layout_20"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title_news"
                style="@style/styleTextView_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="5"
                android:text="Desert Rose"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time_news"
                style="@style/styleTextView_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_20"
                android:text="05:25" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/layout_120"
            android:layout_height="@dimen/layout_120"
            android:layout_margin="@dimen/layout_20"
            android:src="@drawable/ic_action_next_item" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_5"
        android:layout_marginTop="@dimen/layout_10"
        android:background="#cccccc" />

</LinearLayout>