<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_20"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/llenglish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_150"
            android:layout_weight="1"
            android:background="#ffffff"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/ck_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_20"
                android:button="@drawable/custom_radio"
                android:checked="true"
                android:clickable="false" />

            <TextView
                style="@style/styleTextView_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_30"
                android:text="English"
                android:textColor="#0000FF"
                android:textSize="@dimen/textSize55" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSpanish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_150"
            android:layout_marginLeft="@dimen/layout_20"
            android:layout_weight="1"
            android:background="#ffffff"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/ck_spanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_20"
                android:button="@drawable/custom_radio"
                android:checked="false"
                android:clickable="false" />

            <TextView
                style="@style/styleTextView_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_30"
                android:text="Spanish"
                android:textColor="#0000FF"
                android:textSize="@dimen/textSize55" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>