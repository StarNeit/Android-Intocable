<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_20"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

              

                <TextView
                    android:id="@+id/tv_Title_events"
                    style="@style/styleTextView_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_10"
                    android:alpha="0.7"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="sfsfsd"
                    android:textSize="@dimen/textSize45" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time_events"
                style="@style/styleTextView_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_20"
                android:alpha="0.7"
                android:text="05:25"
                android:textSize="@dimen/textSize45" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/layout_25"
            android:layout_height="@dimen/layout_60"
            android:layout_gravity="end|center"
            android:layout_margin="@dimen/layout_40"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_5"
        android:layout_marginLeft="@dimen/layout_20"
        android:layout_marginTop="@dimen/layout_10"
        android:background="#cccccc" />

</LinearLayout>